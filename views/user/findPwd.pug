include ../includes/header.pug
.container
  form.form-horizontal.form-group.login-box(action="/users/findPwd" method="post" role="form" class="form-horizontal")
    h5 找回密码
    .form-box.mar-top.clearfix
      label(for="username" class="col-sm-2 control-label") 用户名：
      .col-sm-4
        input(type="text" class="form-control" id="username" name="username" placeholder="用户名")
    .form-box.clearfix
      label(for="email" class="col-sm-2 control-label") 邮箱账号：
      .col-sm-4
        input(type="email" class="form-control" id="email" name="email" placeholder="请留下您常用的的邮箱用于接收邮件")
    .form-box.clearfix.login-btn
      .col-sm-offset-2.col-sm-10
        button(type="submit" class="btn btn-default") 提交
        button(type="reset" class="btn btn-default reset-btn") 重置
